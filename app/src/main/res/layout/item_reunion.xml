<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvReunionNombreHijo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvtTnh"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvReunionNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tvReunionNombreHijo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvReunionFe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvEFecha"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvReunionNombreHijo" />

        <TextView
            android:id="@+id/tvReunionFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/info"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tvReunionFe"
            app:layout_constraintTop_toBottomOf="@+id/tvReunionNombre" />

        <TextView
            android:id="@+id/tvReunionDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvtDesc"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvReunionCur" />

        <TextView
            android:id="@+id/tvReunionDescripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/letras_descripcion"

            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tvReunionDesc"
            app:layout_constraintTop_toBottomOf="@+id/tvEventoCurso" />

        <TextView
            android:id="@+id/tvReunionCur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvttCurso"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvReunionFe" />

        <TextView
            android:id="@+id/tvEventoCurso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tvReunionCur"
            app:layout_constraintTop_toBottomOf="@+id/tvReunionFecha" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>